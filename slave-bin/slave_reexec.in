#
# Send all running piuparts-slaves SIGUSR1 to reexec themselves,
# picking up new code and sections.
#

for pid in $(pgrep --full '/usr/bin/python @sharedir@/piuparts/piuparts-slave')
do
	echo "Sending SIGUSR1 to ${pid}..."
	kill -USR1 $pid
	sleep 5
done
echo "Done."
